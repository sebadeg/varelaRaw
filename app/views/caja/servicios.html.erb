<h2>Carga de servicios varios</h2>
<%= form_tag({:controller => "caja", :action => "carga"}, :method => "post", :multipart => true) do %>
   <%= file_field_tag "archivo", :required => "required" %>
   <%= submit_tag "Cargar" %>
<% end %>

